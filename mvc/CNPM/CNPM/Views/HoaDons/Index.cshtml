@model IEnumerable<CNPM.Models.HoaDon>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DANH SÁCH ĐƠN HÀNG</h1>

<p>
    @Html.ActionLink("Thêm đơn hàng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>Tên KH</th>
        <th>
            Ngày đặt
        </th>
        <th>
            Địa chỉ giao
        </th>
        <th>
            Tổng tiền
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiGiao)
            </td>
            <td>
                @String.Format("{0:,0,000 đ}", @item.TongTien)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaHD }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHD }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaHD })
            </td>
        </tr>
    }

</table>
