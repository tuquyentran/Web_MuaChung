@model CNPM.Models.HoaDon

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ĐƠN HÀNG</h1>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã hoá đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaHD)
        </dd>

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhachHang.TenKH)
        </dd>

        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDat)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiao)
        </dd>

        <dt>
            Địa chỉ giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiGiao)
        </dd>

        <dt>
            Tổng tiền
        </dt>

        <dd>
            @String.Format("{0:,0,000}", @Model.TongTien)
        </dd>

        <dt>
            Tình trạng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>
    </dl>
</div>

<h4>Chi tiết Đơn Hàng</h4>
<table class="table-bordered" width="400px">
    <tr>
        <th>Sản Phẩm</th>
        <th>Số Lượng</th>
        <th>Đơn Giá</th>
        <th>Thành Tiền</th>
    </tr>
    @foreach (var item in @Model.CTHDs)
    {
        <tr>
            <td>@item.SanPham.TenSP</td>
            <td>@item.SoLuong</td>
            <td>@String.Format("{0:,0,000 đ}", item.DonGia)</td>
            <td>@(item.SoLuong * item.DonGia)@String.Format("{0:,0,000 đ}", item.ThanhTien)</td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaHD }) |
    @Html.ActionLink("Back to List", "Index")
</p>
