@model IEnumerable<CNPM.Models.CTHD>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CHI TIẾT HOÁ ĐƠN</h1>

<p>
    @Html.ActionLink("Thêm hoá đơn mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @String.Format("{0:,0,000 đ}", @item.DonGia)
            </td>
            <td>
                @String.Format("{0:,0,000 đ}", @item.ThanhTien)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Chi tiết", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Xoá", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
