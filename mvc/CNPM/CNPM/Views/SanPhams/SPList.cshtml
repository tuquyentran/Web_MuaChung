<!-- Thêm thư viện & thay đổi mô hình để sử dụng thư viện phân trang -->
@using PagedList.Mvc;
@model PagedList.IPagedList<CNPM.Models.SanPham>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="bottom:70px">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/a1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/a2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/a3.jpg" alt="Third slide" width="1180" height="450">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    @foreach (var pro in Model)
    {
        <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card-pro">
                <a href="/SanPhams/Details/@pro.MaSP" style="color: black; text-decoration:none">
                    <img src="~/Content/images/@pro.Hinh" width="200" height="250" />
                    <p>@Html.DisplayFor(model => pro.TenSP)</p>
                    <p>Giá : <font color="red">@String.Format("{0:,0,000 đ}", pro.GiaBan)</font></p>
                </a>
            </div>
        </div>
    }
</div>
<!--Control PagedListPager: mô tả mô hình với số trang là liên kết với tham số "Index" và tham số page-->
@Html.PagedListPager(Model, page => Url.Action("SPList", new { page }))
